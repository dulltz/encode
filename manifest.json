{
  "name": "Encode",
  "version": "0.0.3",
  "description": "Make a string to a code block.",
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.cybozu.com/*",
        "https://*.cybozu-dev.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Make selected text to a code block"
  },
  "commands": {
    "code-block": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Make selected text to a code block."
    }
  }
}
